 <div class="form-body">
        <div class="row">
            <div class="form-holder">
                <div class="form-content">
                    <div class="form-items">
                        <h3>Edit Details</h3>
                        <p>Edit the data below.</p>
                        <form method = "POST" action = "/info/edit">
                            <input type="text" value="{{{id}}}" name = "id" hidden>
                            <div class="col-md-12">
                                <br>
                               <input class="form-control" type="number" name="class" value = {{{class}}} placeholder="Class" required>
                               <div class="valid-feedback">Class field is valid!</div>
                               <div class="invalid-feedback">Class field cannot be blank!</div>
                            </div><br>

                            <div class="col-md-12">
                                <input class="form-control" type="number" name="roll"  value = {{{roll_no}}} placeholder="Roll_no" required>
                                 <div class="valid-feedback">Roll No field is valid!</div>
                                 <div class="invalid-feedback">Roll No field cannot be blank!</div>
                            </div>

                            <div class="col-md-12">
                                <input class="form-control" type="text" name="name"  value = {{{name}}} placeholder="Name" required>
                                 <div class="valid-feedback">Student name field is valid!</div>
                                 <div class="invalid-feedback">Student name field cannot be blank!</div>
                            </div>


                            <div class="col-md-12">
                                <input class="form-control" type="text" name="address"  value = {{{address}}} placeholder="Address" required>
                                 <div class="valid-feedback">Address field is valid!</div>
                                 <div class="invalid-feedback">Address field cannot be blank!</div>
                            </div><br>

                        <div class="form-check">
                          <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                          <label class="form-check-label">I confirm that all data are correct</label>
                         <div class="invalid-feedback">Please confirm that the entered data are all correct!</div>
                        </div>
                  
                        <div class ='costum'>
                            <div class="form-button mt-3">
                                <button id="submit" type="submit" class="btn btn-primary">Update</button>
                            </div>

                            
                        </div>
                        </form>
                        <div class="form-button mt-3">
                                <a href = "/info/del/delete/{{{id}}}"><button class="btn btn-primary">Delete</button></a>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


